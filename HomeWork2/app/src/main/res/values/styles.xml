<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.ButtonBar">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">181dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:background">#2C98F0</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="ButtonRemove">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/remove_btn_shape</item>
        <item name="android:layout_width">281dp</item>
        <item name="android:layout_height">58dp</item>
    </style>
    <style name="ButtonWeb">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/web_button_shape</item>
        <item name="android:layout_width">154dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:elevation">5dp</item>
    </style>

</resources>
