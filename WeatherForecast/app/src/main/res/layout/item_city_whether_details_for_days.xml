<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_city_list_shape"
    android:layout_margin="2dp"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/imageWhetherIcon"
        android:layout_width="@dimen/image_small_icon_size"
        android:layout_height="@dimen/image_small_icon_size"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_add_black_24dp"
        tools:tint="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/tvDateTime"
        tools:text="time"
        android:textSize="@dimen/description_text_size"
        android:textColor="@color/colorRegularText"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvTemperature"
        tools:text="Temp"
        android:textSize="@dimen/description_text_size"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:background="@color/colorAccent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tvDescription"
        tools:text="description"
        android:textSize="@dimen/description_text_size"
        android:gravity="center"
        android:textColor="@color/colorRegularText"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        />

</LinearLayout>